<h1>Confirmar Eliminación de Usuario</h1>

<p>¿Estás seguro de que deseas eliminar al usuario "{{user.username}}"?</p>


<button onclick="deleteUser()">Eliminar Usuario</button>


<a href="/admin/dashboard">Cancelar</a>

<script>
    function deleteUser() {
        const userId = '{{user._id}}';

        fetch(`/api/admin/${userId}/delete`, {
            method: 'DELETE',
        })
            .then(response => response.json())
            .then(data => {
                console.log(data);
                if (data.success) {
                    window.location.href = '/admin/dashboard';
                } else {
                    console.error('Error al eliminar usuario:', data.error);
                }
            })
            .catch(error => {
                console.error('Error al eliminar usuario:', error);
            });
    }
</script>